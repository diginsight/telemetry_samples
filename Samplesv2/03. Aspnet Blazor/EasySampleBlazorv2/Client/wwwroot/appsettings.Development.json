{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AppSettings": {
    "FlushOnWrite": true,
    "ShowNestedFlow": true,
    "TrackExceptionEnabled": true,
    "TrackTraceEnabled": true,
    "TrackEventEnabled": true,

    "Log4NetProvider.FlushOnWrite": true,
    "Log4NetProvider.ShowNestedFlow": true,
    "Log4NetProvider.TrackExceptionEnabled": true,
    "Log4NetProvider.TrackTraceEnabled": true,
    "Log4NetProvider.TrackEventEnabled": true,

    "PublishMetrics": true,
    "PublishFlow": true,

    "_AppInsightsKey": "12345678-1234-1234-1234-1234567890ab",
    "_CategoryFilter": "-resource",
    "_Filter": "-ModbusMap -CommunicationManager"
  },
  "ApplicationInsights": {
    "InstrumentationKey": "<added to kv>",
    "ConnectionString": "<added to kv>",
    "EnableRequestTrackingTelemetryModule": true,
    "IncludeEventId": false,
    "IncludeOperationId": true,
    "IncludeRequestBody": true,
    "IncludeHeaders": true
  },
  "OpenTelemetryOptions": {
    "LokiEndpoint": "",
    //"OltpEndpoint": "http://tempo-tempo-instance-distributor.tempo-operator-system:4317",
    "EnableMetrics": true,
    "EnableTraces": true,
    "EnableLogs": true,
    "TracingSamplingRatio": 0.1
  }
}
